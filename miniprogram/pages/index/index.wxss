/**index.wxss**/

.weather-wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
}

.bgimg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.location-text{
  text-align: center;
}

.temp {
  text-align:center;
  font-size:200rpx;
  line-height:280rpx;
  opacity:0.8;
}
.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}
.air_label{
  margin-left: 20rpx;
  border-radius: 10rpx;
  padding:8rpx;
}

.proposeCY{
  text-align: center;
  margin-left: 20rpx;
  margin-top: 60rpx;
  border-radius: 10rpx;
  padding:8rpx;
  opacity: 0.65;
}

.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom:0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}
.wd-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.forecast{
  font-size: 35rpx;
}
.forecast-temp{
  margin-left: 45rpx;
}
.forecast-wind{
  margin-left: 45rpx;
}
